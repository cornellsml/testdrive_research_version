extends ui_layout
block content
  -var cdn = "https://dhpd030vnpk29.cloudfront.net";
  
  if user.isStudent
    .ui.container.removePadding
      .ui.success.huge.icon.message.noModsRemainingMessage.setDisplayNone
        i.circular.check.icon
        .header There are no remaining modules to complete. Nice work!
      .ui.basic.segment.activeModuleSegment
        br
        h2 Next Module
        br
        .ui.four.stackable.link.cards.activeModules.addPaddingBottom
      
      .ui.basic.segment.inactiveModulesSegment  
        br
        h2.setVisibilityHidden Past Modules
        br
        .ui.four.stackable.link.cards.inactiveModules.addPaddingBottom
    
  else
    .ui.container.removePadding
      br
      h2 Pick A Module:
      br
      .ui.four.stackable.link.cards.addPaddingBottom
       a.ui.card(href=`/intro/advancedlit`)
         .image
           img(src=cdn+'/advancednews.png')
         .content
           .header="Advanced News Literacy" 
 
       a.ui.card(href=`/intro/esteem`)
         .image  
           img(src=cdn+'/esteem.png')
         .content
           .header="The Ups and Downs of Social Media" 
           
       a.ui.card(href=`/intro/accounts`)
         .image
           img(src=cdn+'/acctandpasswords.png')
         .content
           .header="Accounts and Passwords"  

       a.ui.card(href=`/intro/habits`)
         .image
           img(src=cdn+'/smhabits.png')
         .content
           .header="Healthy Social Media Habits"
           
       a.ui.card(href=`/intro/targeted`)
         .image
           img(src=cdn+'/targetedads.png')
         .content
           .header="Ads on Social Media"
           
       a.ui.card(href=`/intro/phishing`)
         .image
           img(src=cdn+'/phishing.png')
         .content
           .header="Scams and Phishing"
           
       a.ui.card(href=`/intro/cyberbullying`)
         .image
           img(src=cdn+'/upstander.png')
         .content
           .header="How to Be an Upstander"
           
       a.ui.card(href=`/intro/safe-posting`)
         .image
           img(src=cdn+'/privateinfo.png')
         .content
           .header="Is It Private Information?"
           
       a.ui.card(href=`/intro/digfoot`)
         .image
           img(src=cdn+'/digfoot.png')
         .content
           .header="Shaping Your Digital Footprint"
           
       a.ui.card(href=`/intro/presentation`)
         .image
           img(src=cdn+'/onlineidentity.png')
         .content
           .header="Online Identities"
           
       a.ui.card(href=`/intro/privacy`)
         .image
           img(src=cdn+'/smprivacy.png')
         .content
           .header="Social Media Privacy" 
            
       a.ui.card(href=`/intro/digital-literacy`)
         .image
           img(src=cdn+'/news.png')
         .content
           .header="News in Social Media"
         
block scripts
  script(src="/module_js/mods.js")
  
block styles
  link(rel='stylesheet', href='/css/mods.css')
