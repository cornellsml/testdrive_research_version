      .chat .chat-history .message {
        color: white;
        padding: 10px 10px;
        line-height: 15px;
        font-size: 14px;
        border-radius: 7px;
        margin-bottom: 8px;
        width: 100%;
        position: relative;
      }
      .chat .chat-history .message:after {
        bottom: 100%;
        left: 7%;
        border: solid transparent;
        content: " ";
        height: 0;
        width: 0;
        position: absolute;
        pointer-events: none;
        border-bottom-color: #DCDCDC;
        border-width: 10px;
        margin-left: -10px;
      }
      .chat .chat-history .my-message {
        background: #DCDCDC;
